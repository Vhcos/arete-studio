+function inferCountryCodeFromUbicacion(ubicacion: unknown): string {
+  const raw = String(ubicacion ?? "").trim().toLowerCase();
+  if (!raw) return "CL";
+
+  for (const c of COUNTRY_OPTIONS) {
+    if (raw.endsWith(c.label.toLowerCase())) {
+      return c.code;
+    }
+  }
+
+  return "CL";
+}
 
